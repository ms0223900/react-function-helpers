{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "./custom-types"
    ],
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["src", "setupEnzyme.ts"],
  "exclude": ["node_modules", "**/__tests/*", "**/stories/*"]
}